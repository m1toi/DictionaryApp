<Page x:Class="DictionaryApp.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DictionaryApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMenuPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF002A"/>
                <GradientStop Color="#FF0E4FFF" Offset="0.902"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Modify Word" HorizontalAlignment="Left" VerticalAlignment="Center" Height="36" Width="127" Name="ModifyWordBtn" Margin="50,0,0,0" Click="ModifyWordBtn_Click"/>
        <Button Content="Add Word" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="127" Name="AddWordBtn" Click="AddWordBtn_Click"/>
        <Button Content="Delete Word" HorizontalAlignment="Right" VerticalAlignment="Center" Height="36" Width="127" Name="DeleteWordBtn" Margin="633,0,50,0" Click="DeleteWordBtn_Click"/>
        <Label Content="Administrator Menu" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="30" FontWeight="Bold"/>
        <Grid/>
    </Grid>
</Page>
